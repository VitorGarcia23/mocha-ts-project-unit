{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./out",
      "rootDir": "./",
      "removeComments": true,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es5",
        "es2015.promise",
        "es6",
        "es2017"
      ]
    },
    "exclude": [
      "node_modules",
      "test-results"
    ]
  }